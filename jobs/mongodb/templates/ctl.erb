#!/bin/bash

DATA_DIR=/var/vcap/store/mongodb
RUN_DIR=/var/vcap/sys/run/mongodb
LOG_DIR=/var/vcap/sys/log/mongodb

PIDFILE=$RUN_DIR/mongodb.pid
RUNAS=vcap

function pid_exists() {
  ps -p $1 &> /dev/null
}

case $1 in

  start)
    mkdir -p $DATA_DIR $RUN_DIR $LOG_DIR
    chown -R $RUNAS:$RUNAS $DATA_DIR $RUN_DIR $LOG_DIR

    echo $$ > $PIDFILE

    <% if p("mongodb.auth.replica-set.enable") %>
    if [[ ! -f /var/vcap/mongodb/keyfile ]]; then
      echo "<%= p('mongodb.auth.replica-set.keyfile') %>" > /var/vcap/jobs/mongodb/keyfile
      chmod 0700 /var/vcap/jobs/mongodb/keyfile
      chown $RUNAS:$RUNAS /var/vcap/jobs/mongodb/keyfile
    fi
    <% end %>

    exec chpst -u $RUNAS:$RUNAS \
      /var/vcap/packages/simple_server/mongodb-linux-x86_64-ubuntu1404-3.2.6/bin/mongod <% if p("mongodb.auth.single-server.enable") %> --auth <% end %> <% if p("mongodb.auth.replica-set.enable") %> --keyFile /var/vcap/jobs/mongodb/keyfile <% end %> --dbpath $DATA_DIR
      >>$LOG_DIR/server.stdout.log 2>>$LOG_DIR/server.stderr.log
    ;;

  stop)
    PID=$(head -1 $PIDFILE)
    if [ ! -z $PID ] && pid_exists $PID; then
      kill $PID
    fi
    while [ -e /proc/$PID ]; do sleep 0.1; done
    rm -f $PIDFILE
    ;;

  *)
  echo "Usage: ctl {start|stop|console}" ;;
esac
exit 0
